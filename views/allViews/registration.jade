extends ./../index.jade

block registration
    div.mainContainer
        div(class="col-xs-12 text-center")
            table(border= 1, class="navCompetition")
                thead
                    th(class="col-sm-3 text-center") 
                        a(href="/") Main
                    th(class="col-sm-3 text-center") 
                        a(href='/competitions') Competitions
                    th(class="col-sm-3 text-center") 
                        a(href='https://vk.com/vlad_ork') VK
        div(class="col-xs-12 text-center")
            h2
                span(class="glyphicon glyphicon glyphicon-star")
                    b(style="word-spacing: -20px;") #{registration[0].TITLE} 
                br
                small #{registration[0].PLACE}, #{registration[0].DATECOMPETITION}
        div(class="col-xs-12 text-center")
            table(border= 1, class="mainTable")
                thead
                    th(class="col-sm-4 text-center") 
                        a(href='/competition/#{registration[0].IDCOMPETITION}/info') Info
                    th(class="col-sm-4 text-center")   
                        a(href='/competition/#{registration[0].IDCOMPETITION}/details') Applications(#{registration[0].COUNT})
                    th(class="col-sm-4 text-center") Registration
        div(class="col-xs-12 text-center")
            table(border= 1, class="mainTable")
                thead
                    th(class="col-xs-12 text-center" colspan="2")
                        h4
                            strong Choose department
                tbody
                    td(class="col-xs-6 text-center")
                        a(href='/competition/#{registration[0].IDCOMPETITION}/registration/inDB' type="button")
                            b In Data Base 
                    td(class="col-xs-6 text-center")
                        a(href='/competition/#{registration[0].IDCOMPETITION}/registration/notInDB' type="button")
                            b Not in Data Base
    
