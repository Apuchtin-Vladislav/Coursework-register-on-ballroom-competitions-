extends ./../index.jade

block oneCategory
    -var hrefInfo = '/competition/oneCategory/id/info';
    -var hrefRegistration = '/competition/registration';
    -var amountAplications = 10;
    -var amountOneCategory = 1;
    div.mainContainer
        table(border= 1, class="navCompetition")
            thead
                th.navFirstElement 
                    a(href="/") Main
                th
                    a(href='/competitions') Competitions
                th
                    a(href='https://vk.com/vlad_ork') VK
        table(border= 1, class="mainTable")
            thead
                th.topTable 
                    a(href='/competition/#{infoSingleCategory.idCompetition}/info') Info
                th.topTable
                    a(href='/competition/#{infoSingleCategory.idCompetition}/details') Applications #{amountAplications}
                th.topTable 
                    a(href=hrefRegistration) Registration
         div(class="panel")
            div(class="panel-heading text-center")
                div(class="row")
                    div(class="col-xs-1")
                        a(href="/competition/#{infoSingleCategory.idCompetition}/details" class="btn btn-lg btn-link" title="Previous category")
                            span(class="glyphicon glyphicon-chevron-left")
                    div(class="col-xs-10")
                      h4(class="text-primary" style="padding-top:2px; text-align: center;") #{infoSingleCategory[0].CATEGORYNAME} #{infoSingleCategory[0].CLASSNAME} #{infoSingleCategory[0].TYPEOFPROGRAM} - #{amountOneCategory}
                    div(class="col-xs-1")
                    div(class="col-xs-3")
        table(border=1, class="mainTable")
            thead
                tr
                    th.topTable Number
                    th.topTable Class
                    th.topTable Category
                    th.topTable Couple
                    th.topTable Country
            each index in infoSingleCategory
                tbody
                    tr
                        td(style="text-align: center;") #{index.PAIRNUMBER}
                        td #{index.CLASSNAME}
                        td #{index.CATEGORYNAME}
                        td
                            a #{index.SURNAMEPARTNER} #{index.NAMEPARTNER} - 
                            a #{index.SURNAMESHEPARTNER} #{index.NAMESHEPARTNER} 
                        td #{index.COUNTRY}
