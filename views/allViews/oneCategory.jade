extends ./../index.jade

block oneCategory
    div.mainContainer
        div(class="col-xs-12 text-center")   
            table(border= 1, class="navCompetition")
                thead
                    th(class="col-sm-3 text-center") 
                        a(href="/") Main
                    th(class="col-sm-3 text-center")
                        a(href='/competitions') Competitions
                    th(class="col-sm-3 text-center")
                        a(href='https://vk.com/vlad_ork') VK
        div(class="col-xs-12 text-center")
            h2
                span(class="glyphicon glyphicon glyphicon-star")
                    b(style="word-spacing: -20px;") #{infoSingleCategory.moreInformation.TITLE} 
                br
                small #{infoSingleCategory.moreInformation.PLACE}, #{infoSingleCategory.moreInformation.DATECOMPETITION}
        div(class="col-xs-12 text-center")
            table(border= 1, class="mainTable")
                thead
                    th(class="col-sm-3 text-center") 
                        a(href='/competition/#{infoSingleCategory.idCompetition}/info') Info
                    th(class="col-sm-3 text-center")
                        a(href='/competition/#{infoSingleCategory.idCompetition}/details') Applications(#{infoSingleCategory.moreInformation.COUNT})
                    th(class="col-sm-3 text-center") 
                        a(href='/competition/#{infoSingleCategory.idCompetition}/registration') Registration
        div(class="col-xs-12 text-center panel")
            div(class="panel-heading text-center")
                div(class="row")
                    div(class="col-xs-1")
                        a(href="/competition/#{infoSingleCategory.idCompetition}/details" class="btn btn-lg btn-link" title=" Back to previous categories")
                            span(class="glyphicon glyphicon-chevron-left")
                    div(class="col-xs-10")
                      h4(class="text-primary" style="padding-top:2px; text-align: center;") Category - (#{infoSingleCategory[0].CATEGORYNAME}, #{infoSingleCategory[0].CLASSNAME}, #{infoSingleCategory[0].TYPEOFPROGRAM})
                    div(class="col-xs-1")
                    div(class="col-xs-3")
        div(class="col-xs-12 text-center")
            table(border=1, class="mainTable")
                thead
                    tr  
                        th.text-center Class
                        th.text-center Category
                        th.text-center Couple
                        th.text-center Country
                each index in infoSingleCategory
                    tbody
                        tr 
                            td #{index.CLASSNAME}
                            td #{index.CATEGORYNAME}
                            td
                                a #{index.SURNAMEPARTNER} #{index.NAMEPARTNER} - 
                                a #{index.SURNAMESHEPARTNER} #{index.NAMESHEPARTNER} 
                            td #{index.COUNTRY}