extends ./../index.jade

block answer
    div.mainContainer
        div(class="col-xs-12 text-center")
            table(border= 1, class="navCompetition")
                thead
                    th(class="col-sm-3 text-center") 
                        a(href="/") Main
                    th(class="col-sm-3 text-center") 
                        a(href='/competitions') Competitions
                    th(class="col-sm-3 text-center") 
                        a(href='https://vk.com/vlad_ork') VK
        div(class="col-xs-12 text-center")
            h2
                span(class="glyphicon glyphicon glyphicon-star")
                    b(style="word-spacing: -20px;") #{answer.info.TITLE} 
                br
                small #{answer.info.PLACE}, #{answer.info.DATECOMPETITION}
        div(class="col-xs-12 text-center")
            table(border= 1, class="mainTable")
                thead
                    th(class="col-sm-4 text-center")
                        a(href='/competition/#{answer.info.IDCOMPETITION}/info') Info
                    th(class="col-sm-4 text-center")  
                        a(href='/competition/#{answer.info.IDCOMPETITION}/details') Applications(#{answer.info.COUNT})
                    th(class="col-sm-4 text-center")
                        a(href='/competition/#{answer.info.IDCOMPETITION}/registration') Registration
        div(class="panel")
            div(class="panel-heading text-center")
                div(class="row")
                    div(class="col-xs-1")
                        a(href="/competition/#{answer.info.IDCOMPETITION}/registration/inDB" class="btn btn-lg btn-link" title="Back to registration")
                            span(class="glyphicon glyphicon-chevron-left")
                    div(class="col-xs-12" style="margin-left: -1%;")
                        if answer.length === undefined
                            h3(class='alert alert-danger') This couple already exist!
                        else
                            h3(class="alert alert-success") Registration of this couple is successful!
                    div(class="col-xs-1")
                    div(class="col-xs-3")
        div(class="col-xs-12")
            -let n = 0;
            if answer.length != undefined
                table(border = 1, class="mainTable")
                    thead 
                        each val, index in answer[0]
                            -n++;
                            if n < 5
                                th(class='text-center' style='font-size: 10px;') #{index}
                        tbody
                            -n=0;
                            for key in answer[0]
                                -n++;
                                if n < 5
                                    td.text-center #{key}
                table(border = 1, class="mainTable")
                    thead
                        -n=0; 
                        each val, index in answer[0]
                            -n++;
                            if n >= 5 && n <= 8
                                th(class='text-center' style='font-size: 10px;') #{index}
                        tbody
                            -n=0;
                            for key in answer[0]
                                -n++;
                                if n >= 5 && n <= 8
                                    td.text-center #{key}
                table(border = 1, class="mainTable")
                    thead
                        -n=0; 
                        each val, index in answer[0]
                            -n++;
                            if n > 8 && n <= 12
                                th(class='text-center' style='font-size: 10px;') #{index}
                        tbody
                            -n=0;
                            for key in answer[0]
                                -n++;
                                if n > 8 && n <= 12
                                    td.text-center #{key}
                table(border = 1, class="mainTable")
                    thead
                        -n=0; 
                        each val, index in answer[0]
                            -n++;
                            if n > 12
                                th(class='text-center' style='font-size: 10px;') #{index}
                        tbody
                            -n=0;
                            for key in answer[0]
                                -n++;
                                if n > 12
                                    td.text-center #{key}
