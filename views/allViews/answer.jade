extends ./../index.jade

block answer
    div(class="mainContainer")
        table(border= 1, class="navCompetition")
            thead
                th.navFirstElement 
                    a(href="/") Main
                th
                    a(href='/competitions') Competitions
                th
                    a(href='https://vk.com/vlad_ork') VK
        div(class="col-xs-12")
            h2(style="text-align: center;")
                span(class="glyphicon glyphicon glyphicon-star")
                    b(style="word-spacing: -20px;") #{answer.info.TITLE} 
                br
                small #{answer.info.PLACE}, #{answer.info.DATECOMPETITION}
        table(border= 1, class="mainTable")
            thead
                th.topTable
                    a(href='/competition/#{answer.info.IDCOMPETITION}/info') Info
                th.topTable  
                    a(href='/competition/#{answer.info.IDCOMPETITION}/details') Applications(#{answer.info.COUNT})
                th.topTable
                    a(href='/competition/#{answer.info.IDCOMPETITION}/registration') Registration
        div(class="panel")
            div(class="panel-heading text-center")
                div(class="row")
                    div(class="col-xs-1")
                        a(href="/competition/#{answer.info.IDCOMPETITION}/registration/inBD" class="btn btn-lg btn-link" title="Back to registration")
                            span(class="glyphicon glyphicon-chevron-left")
                    div(class="col-xs-12")
                        if answer.length === undefined
                            h3(style="text-align: center;") This couple already exist!
                        else
                            h3(style="text-align: center;") Registration of this pair is successful!
                    div(class="col-xs-1")
                    div(class="col-xs-3")
        div(class="col-xs-12")
